---
const { title, description, image } = Astro.props;
const imagePath = `/${image}.webp`;
---

<section
  class={`grid grid-cols-2 bg-cover bg-center bg-[url('${imagePath}')]`}
  style={`background-image: url('${imagePath}')`}
>
  <div
    class={`flex flex-col items-center justify-center text-3xl text-center max-w-xl mx-auto px-4 py-16 ${image === "vision" ? "order-2" : ""}`}
  >
    <h2 class="title-purple mb-6">{title}</h2>
    <p class="text-2xl">{description}</p>
  </div>
  <div class="h-[500px]"></div>
</section>
