<section class="py-28">
  <h2
    class="text-5xl text-gray-600 border-b-2 border-purple-800 w-fit mx-auto mb-10"
  >
    ENTÉRATE
  </h2>
  <main class="flex justify-center items-center gap-x-1">
    {
      news.map(({ title, image, link }) => (
        <a class="rounded-lg overflow-hidden group" href={link}>
